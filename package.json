{
  "name": "easymediaconverter",
  "displayName": "Easy Media Converter",
  "description": "Convert image, audio, and video files using ffmpeg",
  "homepage": "https://github.com/lanly-dev/vscode-emc",
  "publisher": "lanly-dev",
  "version": "1.1.0",
  "engines": {
    "vscode": "^1.98.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Easy",
    "Media",
    "Convert",
    "Image",
    "Audio",
    "Video",
    "jpg",
    "mp3",
    "mp4",
    "wav"
  ],
  "icon": "media/emc.png",
  "galleryBanner": {
    "color": "white",
    "theme": "light"
  },
  "qna": false,
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "EMC",
      "properties": {
        "emc.enableGpuAcceleration": {
          "type": "boolean",
          "default": false,
          "description": "Enable GPU acceleration (h264_nvenc - Nvidia) video encoding"
        }
      }
    },
    "commands": [
      {
        "command": "emc.download",
        "title": "EMC: Download ffmpeg"
      },
      {
        "command": "emc.convertMp3",
        "title": "EMC: Convert to mp3"
      },
      {
        "command": "emc.convertMp4",
        "title": "EMC: Convert to mp4"
      },
      {
        "command": "emc.convertJpg",
        "title": "EMC: Convert to jpg"
      },
      {
        "command": "emc.convertWav",
        "title": "EMC: Convert to wav"
      },
      {
        "command": "emc.revealFfmpegBin",
        "title": "EMC: Reveal ffmpeg binary location"
      },
      {
        "command": "emc.addToBatchConvert",
        "title": "EMC: Add to batch queue"
      },
      {
        "command": "emc.removeBatchConvert",
        "title": "EMC: Remove from batch queue"
      },
      {
        "command": "emc.clearBatchConvert",
        "title": "EMC: Clear batch queue",
        "icon": "$(clear-all)"
      },
      {
        "command": "emc.showInfo",
        "title": "EMC: show information",
        "icon": "$(info)"
      },
      {
        "command": "emc.pickConvertFormat",
        "title": "EMC: Pick convert format",
        "icon": "$(run-all)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "emcTreeView",
          "name": "emc",
          "contextualTitle": "EMC",
          "icon": "$(rocket)"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "emcTreeView",
        "contents": "The queue view is empty"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "emc.convertMp3",
          "when": "false"
        },
        {
          "command": "emc.convertMp4",
          "when": "false"
        },
        {
          "command": "emc.convertJpg",
          "when": "false"
        },
        {
          "command": "emc.convertWav",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname =~ /\\.(jpg|jpeg|png|webp)$/",
          "command": "emc.convertJpg",
          "group": "emcGroup@1"
        },
        {
          "when": "resourceExtname =~ /\\.(ape|flac|mp3|wav|wma|avi|flv|mkv|mp4|ts|webm|wmv)$/",
          "command": "emc.convertMp3",
          "group": "emcGroup@1"
        },
        {
          "when": "resourceExtname =~ /\\.(ape|flac|mp3|wav|wma|avi|flv|mkv|mp4|ts|webm|wmv)$/",
          "command": "emc.convertWav",
          "group": "emcGroup@1"
        },
        {
          "when": "resourceExtname =~ /\\.(avi|flv|mkv|mp4|ts|webm|wmv)$/",
          "command": "emc.convertMp4",
          "group": "emcGroup@2"
        },
        {
          "when": "resourceExtname =~ /\\.(jpg|jpeg|png|webp|ape|flac|mp3|wav|wma|avi|flv|mkv|mp4|ts|webm|wmv)$/",
          "command": "emc.addToBatchConvert",
          "group": "emcGroup@3"
        }
      ],
      "view/title": [
        {
          "view": "emcTreeView",
          "command": "emc.clearBatchConvert",
          "group": "navigation",
          "when": "view == emcTreeView && emcBatchItemCount > 0"
        },
        {
          "view": "emcTreeView",
          "command": "emc.showInfo",
          "group": "navigation",
          "when": "view == emcTreeView && emcBatchItemCount > 0"
        },
        {
          "view": "emcTreeView",
          "command": "emc.pickConvertFormat",
          "group": "navigation",
          "when": "view == emcTreeView && emcBatchConvertible"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "test-compile": "tsc -p ./",
    "webpack-dev": "webpack --mode development --watch",
    "webpack": "webpack --mode development",
    "lint": "eslint . --fix",
    "vsce-package": "vsce package"
  },
  "devDependencies": {
    "@types/ffmpeg-static": "^3.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "22.x",
    "@types/vscode": "^1.99.1",
    "@typescript-eslint/eslint-plugin": "^8.32.0",
    "@typescript-eslint/parser": "^8.32.0",
    "@vscode/vsce": "^3.3.2",
    "eslint": "^9.26.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.3",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.9.0",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "pretty-bytes": "^7.0.0"
  },
  "repository": {
    "url": "https://github.com/lanly-dev/vscode-emc"
  },
  "license": "MIT"
}
