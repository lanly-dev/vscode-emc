{
  "name": "easymediaconverter",
  "displayName": "Easy Media Converter",
  "description": "Convert audio and video media to mp3/mp4",
  "homepage": "https://github.com/lanly-dev/vscode-emc",
  "publisher": "lanly-dev",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Audio",
    "Convert",
    "Easy",
    "Media",
    "Video",
    "mp3",
    "mp4"
  ],
  "icon": "media/emc.png",
  "galleryBanner": {
    "color": "white",
    "theme": "light"
  },
  "qna": false,
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "emc.download",
        "title": "EMC: Download ffmpeg"
      },
      {
        "command": "emc.convertMp3",
        "title": "EMC: Convert to mp3"
      },
      {
        "command": "emc.convertWav",
        "title": "EMC: Convert to wav"
      },
      {
        "command": "emc.convertMp4",
        "title": "EMC: Convert to mp4"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "emc.convertMp3",
          "when": "false"
        },
        {
          "command": "emc.convertWav",
          "when": "false"
        },
        {
          "command": "emc.convertMp4",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "alt": "",
          "when": "resourceExtname =~ /\\.(flac|wav|wma)$/",
          "command": "emc.convertMp3",
          "group": "emcGroup@1"
        },
        {
          "alt": "",
          "when": "resourceExtname =~ /\\.(flac|mp3|wma)$/",
          "command": "emc.convertWav",
          "group": "emcGroup@1"
        },
        {
          "when": "resourceExtname =~ /\\.(avi|wmv|flv|mkv)$/",
          "command": "emc.convertMp4",
          "group": "emcGroup@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
		"test-compile": "tsc -p ./",
		"webpack-dev": "webpack --mode development --watch",
		"webpack": "webpack --mode development",
    "lint": "eslint . --fix",
    "vsce-package": "vsce package"
  },
  "devDependencies": {
    "@types/ffmpeg-static": "^3.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "22.x",
    "@types/vscode": "^1.97.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "vsce": "^2.15.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.8.1",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "pretty-bytes": "^6.1.1"
  },
  "repository": {
    "url": "https://github.com/lanly-dev/vscode-emc"
  },
  "license": "MIT"
}
