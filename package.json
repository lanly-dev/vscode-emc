{
  "name": "easymediaconverter",
  "displayName": "Easy Media Converter",
  "description": "Convert audio and video media to mp3/mp4",
  "homepage": "https://github.com/lanly-dev/vscode-emc",
  "publisher": "lanly-dev",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.65.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Audio",
    "Convert",
    "Easy",
    "Media",
    "Video",
    "mp3",
    "mp4"
  ],
  "icon": "media/emc.png",
  "galleryBanner": {
    "color": "white",
    "theme": "light"
  },
  "qna": false,
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "emc.download",
        "title": "EMC: Download ffmpeg"
      },
      {
        "command": "emc.convertMp3",
        "title": "EMC: Convert to mp3"
      },
      {
        "command": "emc.convertMp4",
        "title": "EMC: Convert to mp4"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "emc.convertMp3",
          "when": "false"
        },
        {
          "command": "emc.convertMp4",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "alt": "",
          "when": "resourceExtname =~ /\\.(wav|wma)$/",
          "command": "emc.convertMp3",
          "group": "emcGroup@1"
        },
        {
          "when": "resourceExtname =~ /\\.(avi|wmv|flv|mkv)$/",
          "command": "emc.convertMp4",
          "group": "emcGroup@1"
        }
      ]
    },
    "configuration": [
      {
        "title": "Easy Media Converter",
        "properties": {
          "emc.gcfUrl": {
            "type": "string",
            "default": "THE_URL",
            "description": "Specify Google Cloud Function URL."
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "vsce-package": "vsce package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/ffmpeg-static": "^3.0.1",
    "@types/fluent-ffmpeg": "^2.1.20",
    "@types/node": "17.x",
    "@types/vscode": "^1.65.0",
    "@typescript-eslint/eslint-plugin": "^5.13.0",
    "@typescript-eslint/parser": "^5.13.0",
    "eslint": "^8.10.0",
    "ts-loader": "^9.2.7",
    "typescript": "^4.6.2",
    "vsce": "^2.6.7",
    "webpack": "^5.70.0",
    "webpack-cli": "^4.9.2"
  },
  "dependencies": {
    "axios": "^0.26.0",
    "ffmpeg-static": "^5.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "pretty-bytes": "^6.0.0"
  },
  "repository": {
    "url": "https://github.com/lanly-dev/vscode-emc"
  },
  "license": "MIT"
}
