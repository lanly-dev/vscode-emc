{
  "name": "easymediaconverter",
  "displayName": "Easy Media Converter",
  "description": "Convert image, audio, and video files using ffmpeg",
  "homepage": "https://github.com/lanly-dev/vscode-emc",
  "publisher": "lanly-dev",
  "version": "3.0.0",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Easy",
    "Media",
    "Convert",
    "Image",
    "Audio",
    "Video",
    "jpg",
    "mp3",
    "mp4",
    "wav"
  ],
  "icon": "media/emc.png",
  "galleryBanner": {
    "color": "white",
    "theme": "light"
  },
  "qna": false,
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "EMC",
      "properties": {
        "emc.enableGpuAcceleration": {
          "type": "boolean",
          "default": false,
          "description": "Enable GPU acceleration (h264_nvenc - Nvidia) video encoding"
        },
        "emc.videoQuality": {
          "type": "number",
          "default": 23,
          "minimum": 0,
          "maximum": 51,
          "description": "Video encoding quality using VBR (CRF: 0=best, 51=worst). Lower values produce better quality but larger files."
        },
        "emc.audioQuality": {
          "type": "number",
          "default": 4,
          "minimum": 0,
          "maximum": 9,
          "description": "Audio encoding quality (VBR: 0=best, 9=worst). For MP3: 0-9, lower is better quality."
        },
        "emc.checkBinary": {
          "type": "boolean",
          "default": true,
          "description": "Check ffmpeg binary on startup"
        }
      }
    },
    "commands": [
      {
        "command": "emc.download",
        "title": "EMC: Download ffmpeg"
      },
      {
        "command": "emc.convertMp3",
        "title": "EMC: Convert to mp3"
      },
      {
        "command": "emc.convertMp4",
        "title": "EMC: Convert to mp4"
      },
      {
        "command": "emc.convertJpg",
        "title": "EMC: Convert to jpg"
      },
      {
        "command": "emc.convertGif",
        "title": "EMC: Convert to gif"
      },
      {
        "command": "emc.convertWav",
        "title": "EMC: Convert to wav"
      },
      {
        "command": "emc.revealFfmpegBin",
        "title": "EMC: Reveal ffmpeg binary location"
      },
      {
        "command": "emc.addToQueue",
        "title": "EMC: Add to queue"
      },
      {
        "command": "emc.removeFromQueue",
        "title": "EMC: Remove from queue",
        "icon": "$(close)"
      },
      {
        "command": "emc.clearQueue",
        "title": "EMC: Clear queue",
        "icon": "$(clear-all)"
      },
      {
        "command": "emc.showQueueInfo",
        "title": "EMC: show information",
        "icon": "$(info)"
      },
      {
        "command": "emc.startConversionQueue",
        "title": "EMC: start conversionQueue",
        "icon": "$(run-all)"
      },
      {
        "command": "emc.changeVideoQuality",
        "title": "EMC: Change video quality",
        "icon": "$(edit)"
      },
      {
        "command": "emc.changeAudioQuality",
        "title": "EMC: Change audio quality",
        "icon": "$(edit)"
      },
      {
        "command": "emc.toggleGpu",
        "title": "EMC: Toggle GPU acceleration",
        "icon": "$(settings-gear)"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "emcTreeView",
          "name": "EMC",
          "contextualTitle": "EMC",
          "icon": "media/emc.svg"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "emcTreeView",
        "contents": "The queue view is empty"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "emc.convertMp3",
          "when": "false"
        },
        {
          "command": "emc.convertMp4",
          "when": "false"
        },
        {
          "command": "emc.convertJpg",
          "when": "false"
        },
        {
          "command": "emc.convertWav",
          "when": "false"
        },
        {
          "command": "emc.addToQueue",
          "when": "false"
        },
        {
          "command": "emc.removeFromQueue",
          "when": "false"
        },
        {
          "command": "emc.clearQueue",
          "when": "false"
        },
        {
          "command": "emc.showQueueInfo",
          "when": "false"
        },
        {
          "command": "emc.startConversionQueue",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "command": "emc.convertJpg",
          "when": "resourceExtname =~ /\\.(jpg|jpeg|png|webp)$/",
          "group": "emcGroup@1"
        },
        {
          "command": "emc.convertMp3",
          "when": "resourceExtname =~ /\\.(ape|flac|mp3|wav|wma|avi|flv|mkv|mp4|ts|webm|wmv)$/",
          "group": "emcGroup@1"
        },
        {
          "command": "emc.convertWav",
          "when": "resourceExtname =~ /\\.(ape|flac|mp3|wav|wma|avi|flv|mkv|mp4|ts|webm|wmv)$/",
          "group": "emcGroup@1"
        },
        {
          "command": "emc.convertMp4",
          "when": "resourceExtname =~ /\\.(avi|flv|mkv|mp4|ts|webm|wmv)$/",
          "group": "emcGroup@2"
        },
        {
          "command": "emc.convertGif",
          "title": "EMC: Convert to gif",
          "when": "resourceExtname =~ /\\.(avi|flv|mkv|mp4|ts|webm|webp|wmv)$/",
          "group": "emcGroup@2"
        },
        {
          "command": "emc.addToQueue",
          "when": "resourceExtname =~ /\\.(jpg|jpeg|png|webp|ape|flac|mp3|wav|wma|avi|flv|mkv|mp4|ts|webm|wmv)$/",
          "group": "emcGroup@3"
        }
      ],
      "view/title": [
        {
          "view": "emcTreeView",
          "command": "emc.clearQueue",
          "group": "navigation",
          "when": "view == emcTreeView && emcItemCount > 0 && !emcQueueRunning"
        },
        {
          "view": "emcTreeView",
          "command": "emc.showQueueInfo",
          "group": "navigation",
          "when": "view == emcTreeView && emcItemCount > 0"
        },
        {
          "view": "emcTreeView",
          "command": "emc.startConversionQueue",
          "group": "navigation",
          "when": "view == emcTreeView && emcQueueConvertible && !emcQueueRunning"
        }
      ],
      "view/item/context": [
        {
          "command": "emc.removeFromQueue",
          "when": "viewItem == emcTreeviewItem",
          "group": "inline"
        },
        {
          "command": "emc.changeVideoQuality",
          "when": "viewItem == emcSettingVideoQuality",
          "group": "inline"
        },
        {
          "command": "emc.changeAudioQuality",
          "when": "viewItem == emcSettingAudioQuality",
          "group": "inline"
        },
        {
          "command": "emc.toggleGpu",
          "when": "viewItem == emcSettingGpu",
          "group": "inline"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "test-compile": "tsc -p ./",
    "webpack-dev": "webpack --mode development --watch",
    "webpack": "webpack --mode development",
    "efix": "eslint . --fix",
    "vsce-package": "vsce package"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/node": "24.x",
    "@types/tar": "^6.1.13",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "@vscode/vsce": "^3.6.2",
    "eslint": "^9.39.1",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.102.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "@stylistic/eslint-plugin-ts": "^4.4.1",
    "adm-zip": "^0.5.16",
    "axios": "^1.13.1",
    "pretty-bytes": "^7.1.0",
    "tar": "^7.4.3"
  },
  "repository": {
    "url": "https://github.com/lanly-dev/vscode-emc"
  },
  "license": "MIT"
}
