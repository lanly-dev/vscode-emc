{
  "name": "easymediaconverter",
  "displayName": "Easy Media Converter",
  "description": "Convert audio and video media to mp3/mp4",
  "homepage": "https://github.com/lanly-dev/vscode-emc",
  "publisher": "lanly-dev",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.97.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Audio",
    "Convert",
    "Easy",
    "Media",
    "Video",
    "mp3",
    "mp4"
  ],
  "icon": "media/emc.png",
  "galleryBanner": {
    "color": "white",
    "theme": "light"
  },
  "qna": false,
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "EMC",
      "properties": {
        "emc.enableGpuAcceleration": {
          "type": "boolean",
          "default": false,
          "description": "Enable GPU acceleration (h264_nvenc - NVIDIA) video encoding"
        }
      }
    },
    "commands": [
      {
        "command": "emc.download",
        "title": "EMC: Download ffmpeg"
      },
      {
        "command": "emc.convertMp3",
        "title": "EMC: Convert to mp3"
      },
      {
        "command": "emc.convertMp4",
        "title": "EMC: Convert to mp4"
      },
      {
        "command": "emc.convertJpg",
        "title": "EMC: Convert to jpg"
      },
      {
        "command": "emc.convertWav",
        "title": "EMC: Convert to wav"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "emc.convertMp3",
          "when": "false"
        },
        {
          "command": "emc.convertMp4",
          "when": "false"
        },
        {
          "command": "emc.convertJpg",
          "when": "false"
        },
        {
          "command": "emc.convertWav",
          "when": "false"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname =~ /\\.(ape|flac|mp3|wav|wma)$/",
          "command": "emc.convertMp3",
          "group": "emcGroup@1"
        },
        {
          "when": "resourceExtname =~ /\\.(avi|flv|mkv|mp4|ts|webm|wmv)$/",
          "command": "emc.convertMp4",
          "group": "emcGroup@1"
        },
        {
          "when": "resourceExtname =~ /\\.(jpg|jpeg|png|webp)$/",
          "command": "emc.convertJpg",
          "group": "emcGroup@1"
        },
        {
          "when": "resourceExtname =~ /\\.(ape|flac|mp3|webm|wav|wma)$/",
          "command": "emc.convertWav",
          "group": "emcGroup@1"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "webpack --mode production",
    "test-compile": "tsc -p ./",
    "webpack-dev": "webpack --mode development --watch",
    "webpack": "webpack --mode development",
    "lint": "eslint . --fix",
    "vsce-package": "vsce package"
  },
  "devDependencies": {
    "@types/ffmpeg-static": "^3.0.3",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "22.x",
    "@types/vscode": "^1.98.0",
    "@typescript-eslint/eslint-plugin": "^8.27.0",
    "@typescript-eslint/parser": "^8.27.0",
    "@vscode/vsce": "^3.3.0",
    "eslint": "^9.23.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.8.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "pretty-bytes": "^6.1.1"
  },
  "repository": {
    "url": "https://github.com/lanly-dev/vscode-emc"
  },
  "license": "MIT"
}
